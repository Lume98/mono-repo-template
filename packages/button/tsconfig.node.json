{
  // Button 包的 Node 工具配置（如 vite.config.ts）
  // 继承根配置，并添加 Node 环境特定的配置

  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // 构建信息文件位置
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    // Node 环境不需要 DOM 类型，只需要 ES 库
    "lib": ["ES2023"],

    // Node 环境目标版本
    "target": "ES2023",

    // Node 环境特定的类型声明
    "types": ["node"],

    // 工具配置文件不需要生成声明文件
    "noEmit": true,

    // 允许导入 TypeScript 扩展名，配合 noEmit 使用
    "allowImportingTsExtensions": true,

    // 代码质量检查选项
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,

    // 覆盖根配置中的声明文件相关选项（工具文件不需要）
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    // 覆盖根配置中的 composite（工具文件不需要）
    "composite": false
  },
  "include": ["vite.config.ts", "vitest.config.ts", "vitest-setup.ts"]
}
